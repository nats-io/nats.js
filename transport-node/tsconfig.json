{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "outDir": "lib/",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "transport-node/test/**/*",
    "lib/**/*"
  ]
}
